<div class="container">
  <div class="row p-3">
    <div class="col-1"></div>
    <div class="col-5"><h4 class="header"> カテゴリ一覧・追加</h4></div>
  </div>

  <%= form_with model:@category, url: admin_categories_path, method: :post, local:true do |f| %>
    <%= render "admin/shared/error_messages", resource: @category %>

    <div class="row d-flex p-1">
      <div class="col-2 text-right"><%= f.label :カテゴリ名 %></div>
      <div class="col-5"><%= f.text_field :name %></div>
    </div>
    <div class="row p-1">
      <div class="col-2 text-right"><%= f.label :備考 %></div>
      <div class="col-5"><%= f.text_field :remarks %></div>
    </div>
    <div class="row p-1">
      <div class="col-2"></div>
      <div class="col-5"><%= f.submit '新規登録' %></div>
    </div>
  <% end %>

  <div class = "row mt-5">
    <div class="col-10 offset-1">
      <table class ="table table-hover table-inverse">
        <thead class = "thead-gray">
          <tr>
            <th>カテゴリ名</th>
            <th>備考</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.remarks %></td>
              <td><%= link_to "編集する", edit_admin_category_path(category.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center p-4">
    <%= paginate @categories %>
  </div>
</div>
<!-- Project info -->
<%= render "public/projects/info", project: @project, backers: @backers, participants: @participants, total_amount: @total_amount, days_left: @days_left %>

<!-- Project index-->
<div class="container">
  <div class="row justify-content-center p-3">
    <div class="col-9 offset-1">
      <p>本文</p>
      <%= @project.content %>
    </div>
  </div>
  <div class="row justify-content-center p-3">
    <div class="col-4">
      <p>ユーザー情報</p>
      <%= link_to admin_user_path(@project.user.id) do %>
        <%= @project.user.name %>
      <% end %>
    </div>
    <div class="col-4">
      <p>リターン情報</p>
      <p>支援者:<%= @returnv.b_contents %></p>
      <p>参加者:<%= @returnv.p_contents %></p>
    </div>
  </div>
  <div class="row justify-content-center p-3">
    <div class="col-3 text-center"><%= link_to "後援者一覧", admin_project_backers_path(@project), class: 'btn btn-ex' %></div>
    <div class="col-3 text-center"><%= link_to "参加者一覧", admin_project_participants_path(@project), class: 'btn btn-ex' %></div>
  </div>
</div>
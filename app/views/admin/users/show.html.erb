<!-- User info -->
<div class="container p-3">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-5 p-3"><h4 class="header">ユーザ情報</h4></div>
  </div>
  <div class="row p-3">
    <div class="col-4 text-center">
      <% if @user.image.attached? %>
        <%= image_tag @user.image, size: "100×100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100×100" %>
      <% end %><br>
      <%= @user.name %>
    </div>
    <div class="col-8">
      <%= @user.introduction %>
      <%= link_to "編集する", edit_admin_user_path(@user) %>
    </div>
  </div>
</div>
<!-- User project -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 offset-1">
      <table class="table table-hover table-inverse admin_users_table">
        <thead class="thead-gray">
          <tr>
            <th>支援プロジェクト</th>
            <th>参加プロジェクト</th>
            <th>投稿プロジェクト</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% @backer_projects.each do |project| %>
                <%= link_to admin_project_path(project) do %>
                  <%= project.title %>
                <% end %>
              <% end %>
            </td>
            <td>
              <% @participant_projects.each do |project| %>
                <%= link_to admin_project_path(project) do %>
                  <%= project.title %>
                <% end %>
              <% end %>
            </td>
            <td>
              <% @owner_projects.each do |project| %>
                <%= link_to admin_project_path(project) do %>
                  <%= project.title %>
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
        <!--<%#= paginate @users %>-->
    </div>
  </div>
</div>



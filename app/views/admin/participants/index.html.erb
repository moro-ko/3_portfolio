<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-5 p-3"><h4 class="header">参加者一覧</h4></div>
  </div>
  <div class="row">
    <div class="col-10 offset-1">承認済み
      <table class="table table-hover table-inverse admin_users_table">
        <thead class="thead-gray">
          <tr>
            <th>ID</th>
            <th>ユーザー名</th>
            <th>応援コメント</th>
            <th>支援金額※プロジェクト固定</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @participants.each do |participant| %>
            <% if participant.approval_status == "completed" %>
              <tr>
                <td><%= participant.id %></td>
                <td>
                  <%= link_to admin_user_path(participant.user) do %>
                    <%= participant.user.name %>
                  <% end %>
                </td>
                <td><%= participant.comment %></td>
                <td></td>
                <td>
                  <% if participant.user.is_deleted == false %>
                    有効
                  <% elsif participant.user.is_deleted == true %>
                    退会
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <!--<%#= paginate @users %>-->
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1">未承認
      <table class="table table-hover table-inverse admin_users_table">
        <thead class="thead-gray">
          <tr>
            <th>ID</th>
            <th>ユーザー名</th>
            <th>応援コメント</th>
            <th>支援金額 ※プロジェクト固定</th>
            <th>ステータス</th>
            <th> </th>
          </tr>
        </thead>
        <tbody>
          <% @participants.each do |participant| %>
            <% if participant.approval_status == "approval" %>
              <tr>
                <td><%= participant.id %></td>
                <td>
                  <%= link_to admin_user_path(participant.user) do %>
                    <%= participant.user.name %>
                  <% end %>
                </td>
                <td><%= participant.comment %></td>
                <td></td>
                <td>
                  <% if participant.user.is_deleted == false %>
                    有効
                  <% elsif participant.user.is_deleted == true %>
                    退会
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <!--<%#= paginate @users %>-->
    </div>
  </div>
  <div class="row justify-content-center p-4">
    <%= paginate @participants %>
  </div>
</div>
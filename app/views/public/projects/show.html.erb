<h3><%= @project.title %></h3>
<%= @project.user.name %>
<%= @project.category.name %><br>
<%= image_tag @project.image %>
<!-- 支援総額 -->
<p>現在の支援総額</p><%= @total_amount %>円
<!-- 支援者数 -->
<p>支援者数</p><%= @b_number.count %>人
<!-- 参加者数 -->
<p>参加者数</p><%#= @p_number.count %>人
<!-- 残り日数-->
<p>募集終了まで残り</p><p>〇〇日</p>

<% if @project.user_id == current_user.id %>
  <%= link_to "プロジェクトを編集する", edit_project_path %>
<% else %>
  <%= link_to "プロジェクトを支援する", selects_project_returns_path(@project) %>
  <p>♡お気に入り</p>
<% end %>

<p>ホーム</p>
<%= @project.content %>
<p></p>

<p>ユーザー情報</p>
<% if @project.user.image.attached? %>
  <%= image_tag @project.user.image, size: "100×100" %>
<% else %>
  <%= image_tag 'no_image', size: "100×100" %>
<% end %>
<%= @project.user.name %>

<!-- リターン情報 -->
<%= render "public/returns/show", returnv: @returnv %>
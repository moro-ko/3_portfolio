<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-5 p-3"><h4 class="header">検索プロジェクト一覧</h4><p>search-word　"<%= @keyword %>"</p></div>
  </div>
  <div class="row justify-conte-center">
    <div class="col-12">
      <div class ="wrapper grid" >
        <% @projects.each do |project| %>
          <% if project.posting_status == "completed" %>
            <div class="card text-center" style="width: 14rem; height: 13rem;">
              <%= link_to project_path(project) do %>
                <div class="card-img-top pt-2">
                  <% if project.image.attached? %>
                    <%= image_tag project.image, size: "200x120" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "100×100" %>
                  <% end %>
                </div>
                <div class="card-body">
                  <h6 class="card-title text-center"><%= project.title %></h6>
                </div>
              <% end %>
              <!--<div class="card-text">現在支援金額</div>-->
              <!--<div class="card-text">支援者数</div>-->
              <!--<div class="card-text">残り</div>-->
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
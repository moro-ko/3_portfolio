<div class="container">
  <div class="row p-3">
    <div class="col-5 text-right p-3"><h4 class="header">ユーザ情報編集</h4></div>
  </div>

  <%= form_with model: @user, url: user_path, method: :patch do |f| %>
    <%= render "public/shared/error_messages", resource: @user %>

    <div class="field row p-2">
      <div class="col-5 text-right"><%= f.label :名前 %></div>
      <div class="col-5"><%= f.text_field :name %></div>
    </div>
    <div class="field row p-2">
      <div class="col-5 text-right"><%= f.label :メールアドレス %></div>
      <div class="col-5"><%= f.email_field :email, autocomplete: "email" %></div>
    </div>
    <div class="field row p-2">
      <div class="col-5 text-right"><%= f.label :プロフィール %></div>
      <div class="col-5"><%= f.text_area :introduction %></div>
    </div>
    <div class="field row p-2">
      <div class="col-5 text-right"><%= f.label :プロフィール画像 %></div>
      <div class="col-5"><%= f.file_field :image, accept: "image/*" %></div>
    </div>

    <div class="field row p-5">
      <div class="col-6 text-right"><%= f.submit '保存する', class: 'btn btn-ex ml-5' %></div>

      <div class="col-5">
        <%= link_to "退会する" , unsubscribe_users_path, class: 'btn btn-ex ml-5' %>
      </div>
    </div>
  <% end %>
</div>
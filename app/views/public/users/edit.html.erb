<h4>ユーザー情報編集</h4>

<%= form_with model: @user, url: user_path, method: :patch do |f| %>
  <%= render "public/shared/error_messages", resource: @user %>

  <%= f.label :名前 %>
  <%= f.text_field :name %>

  <%= f.label :メールアドレス %>
  <%= f.email_field :email %>

  <%= f.label :プロフィール %>
  <%= f.text_area :introduction %>

  <%= f.label :プロフィール画像 %>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.submit "保存する" %>
  <%= link_to "退会する" , unsubscribe_users_path %>
<% end %>
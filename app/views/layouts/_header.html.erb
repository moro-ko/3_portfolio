<div class="container">
  <div class="row justify-content-center">
    <div class="logo">
      <a class="navbar-brand" href="/"><%= image_tag "logo16", width: "120%", height: "120%" %></a>
    </div>
  </div>
</div>
<nav class="navbar navbar-expand-lg navbar-light">
  <div class="container">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="row">
    <!-- 検索窓 -->
      <%= form_with url: search_projects_path, local: true, method: :get do |f| %>
        <div id="search-wrap">
          <!--<input type="search" value="" name="keyword" id="keyword">-->
          <%= f.text_field :keyword %>
          <!--<%#= f.submit "検索" %>-->
        </div>
      <% end %>
    </div>
    <!-- navbar -->
    <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if admin_signed_in? %>
          <li class="nav-item nav-link"><%= link_to "掲載済みプロジェクト", admin_projects_path, class:"link"  %></li>
          <li class="nav-item nav-link"><%= link_to "未掲載プロジェクト", examination_admin_projects_path, class:"link" %></li>
          <li class="nav-item nav-link"><%= link_to "ユーザー", admin_users_path, class:"link" %></li>
          <li class="nav-item nav-link"><%= link_to "カテゴリ", admin_categories_path, class:"link" %></li>
          <li class="nav-item nav-link"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"link" %></li>
        <% elsif user_signed_in? %>
          <li class="nav-item nav-link"><%= link_to "プロジェクトをはじめる", new_project_path, class:"link" %></li>
          <li class="nav-item nav-link"><%= link_to "プロジェクトをさがす", projects_path, class:"link" %></li>
          <li class="nav-item nav-link"><%= link_to "マイページ", users_my_page_path, class:"link" %></li>
          <li class="nav-item nav-link"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"link" %></li>
        <% else %>
          <li class="nav-item nav-link"><%= link_to "プロジェクトをはじめる", new_user_session_path, class:"link" %></li>
          <li class="nav-item nav-link"><%= link_to "プロジェクトをさがす", projects_path, class:"link" %></li>
          <li class="nav-item nav-link"><%= link_to "ログイン", new_user_session_path, class:"link" %></li>
          <li class="nav-item nav-link"><%= link_to "新規登録", new_user_registration_path, class:"link" %></li>
        <% end %>
      </ul>
    </div>
    <div class="login">
      <% if user_signed_in? %>
        <%= current_user.name %>
      <% end %>
    </div>
  </div>
</nav>



